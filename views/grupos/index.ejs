<h1>
    Grupos:
</h1>

<table>
    <% for (var i in grupos) { %>
        <% var grupo = grupos[i]; %>
        <tr>
            <td>
                Nombre: <b><%= grupo.nombre %></b> Descripci√≥n: <b><%= grupo.descripcion %></b>
            </td>
            <td>
                <a href="/grupos/<%= grupo.id %>" class="button">Ver</a>
            </td>
            <td>
                <a href="/grupos/<%= grupo.id %>/edit" class="button">Editar</a>
            </td>
            <td>
                <a href="/grupos/<%= grupo.id %>?_method=DELETE"
                   onClick="return confirm('Borrar: <%= grupo.nombre %>');"
                   class="button">Borrar</a>
            </td>
        </tr>
    <% } %>
</table>
<% if (locals.loginUser && locals.loginUser.isAdmin) { %>
<a href="grupos/new" class="button">Crear nuevo Grupo</a>
<% } %>