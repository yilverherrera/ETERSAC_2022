<h1>
    Grupos:
</h1>

<table>
    <% for (var i in grupos) { %>
        <% var grupo = grupos[i]; %>
        <tr>
            <td>
               <h2> Nombre: <%= grupo.nombre %> Descripci√≥n: <%= grupo.descripcion %></h2>
            </td>
             <% if (locals.loginUser) { %>
            <td>
                <a href="/grupos/<%= grupo.id %>"><i class="fa-regular fa-eye"></i></a>
            </td>
             <% if (locals.loginUser.isAdmin) { %>
            <td>
                <a href="/grupos/<%= grupo.id %>/edit"><i class="fa-regular fa-pen-to-square"></i></a>
            </td>
            <td>
                <a href="/grupos/<%= grupo.id %>?_method=DELETE"
                   onClick="return confirm('Borrar: <%= grupo.nombre %>');"
                   ><i class="fa-regular fa-trash-can"></i></a>
            </td>
              <% } %>
                <% } %>
        </tr>
    <% } %>
</table>
<% if (locals.loginUser && locals.loginUser.isAdmin) { %>
<a href="grupos/new" class="button">Crear nuevo Grupo</a>
<% } %>