<h1>
    Empresas:
</h1>

<table>
    <% for (var i in empresas) { %>
        <% var empresa=empresas[i]; %>
            <tr>
                <td>
                    <h2><%= empresa.razon %></h2>
                </td>
                <% if (locals.loginUser) { %>
                <td>
                    <a href="/empresas/<%= empresa.id %>"><i class="fa-regular fa-eye"></i></a>
                </td>
                <% if (locals.loginUser.isAdmin) { %>
                <td>
                    <a href="/empresas/<%= empresa.id %>/edit"><i class="fa-regular fa-pen-to-square"></i></a>
                </td>
                <td>
                    <a href="/empresas/<%= empresa.id %>?_method=DELETE"
                        onClick="return confirm('Borrar: <%= empresa.razon %>');"><i class="fa-regular fa-trash-can"></i></a>
                </td>
                <% } %>
                <% } %>
            </tr>
            <% } %>
</table>

<% if (locals.loginUser && locals.loginUser.isAdmin) { %>
<a href="empresas/new" class="button">Crear nueva Empresa</a>
<% } %>