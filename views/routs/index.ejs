<h1>
    Rutas:
</h1>

<table>
    <% for (var i in routs) { %>
        <% var rout = routs[i]; %>
        <tr>
            <td>
                <h2>Ruta: <%= rout.nombre %></h2>
            </td>
            <% if (locals.loginUser) { %>
            <td>
                <a href="/routs/<%= rout.id %>"><i class="fa-regular fa-eye"></i></a>
            </td>
            <% if (locals.loginUser.isAdmin) { %>
            <td>
                <a href="/routs/<%= rout.id %>/edit"><i class="fa-regular fa-pen-to-square"></i></a>
            </td>
            <td>
                <a href="/routs/<%= rout.id %>?_method=DELETE"
                   onClick="return confirm('Borrar: <%= rout.nombre %>');"
                   ><i class="fa-regular fa-trash-can"></i></a>
            </td>
            <% } %>
            <% } %>
        </tr>
    <% } %>
</table>
<% if (locals.loginUser && locals.loginUser.isAdmin) { %>
<a href="routs/new" class="button">Crear nueva Ruta</a>
<% } %>