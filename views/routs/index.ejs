<h1>
    Rutas:
</h1>

<table>
    <% for (var i in routs) { %>
        <% var rout = routs[i]; %>
        <tr>
            <td>
                Ruta: <%= rout.nombre %>
            </td>
            <% if (locals.loginUser) { %>
            <td>
                <a href="/routs/<%= rout.id %>" class="button">Ver</a>
            </td>
            <% if (locals.loginUser.isAdmin) { %>
            <td>
                <a href="/routs/<%= rout.id %>/edit" class="button">Editar</a>
            </td>
            <td>
                <a href="/routs/<%= rout.id %>?_method=DELETE"
                   onClick="return confirm('Borrar: <%= rout.nombre %>');"
                   class="button">Borrar</a>
            </td>
            <% } %>
            <% } %>
        </tr>
    <% } %>
</table>
<% if (locals.loginUser && locals.loginUser.isAdmin) { %>
<a href="routs/new" class="button">Crear nueva Ruta</a>
<% } %>