<div class="toggle2">
    <span class="fa fa-bars"></span>
</div>
<h1>
    SERVICIOS
</h1>

<% if (locals.loginUser) { %>
    <a href="/cajas/<%= caja.id %>/servbuses/new" class="button">Crear Nuevo Servicio</a>
    <% } %>
        <% let totalGral=0; %>
            <% for (var n in services) { %>
                <% var service=services[n]; %>
                    <% let servbuses=servibuses.filter(servibus=> servibus.serviceId === service.id ); %>
                        <% let totalEfec=0; %>

                            <table id="cajaIndex">

                                <tr>
                                    <th colspan="4" align="center">
                                        <br />
                                        <br />
                                        <%= service.nombre.toUpperCase() %>
                                    </th>
                                </tr>

                                <tr>
                                    <th>PD</th>
                                    <th>MONTO A PAGAR</th>
                                    <th>EFECTIVO</th>
                                    <th></th>
                                </tr>

                                <% for (var i in servbuses) { %>
                                    <% var servbus=servbuses[i]; %>
                                        <% totalEfec=totalEfec + servbus.efectivo; %>

                                            <tr>
                                                <td>
                                                    <%= servbus.pertUniSer.codigo %>-<%= servbus.pertUniSer.placa %>
                                                </td>
                                                <td>
                                                    <%= servbus.monto %>
                                                </td>
                                                <td>
                                                    <%= servbus.efectivo %>
                                                </td>
                                                <td>
                                                    <% if (locals.loginUser && (locals.loginUser.isAdmin ||
                                                        locals.loginUser.id===caja.authorId)) { %>
                                                        <a href="/servbuss/<%= servbus.id %>" class="button">Ver</a>
                                                        <a href="/servbuss/<%= servbus.id %>/edit"
                                                            class="button">Editar</a>
                                                        <a href="/servbuss/<%= servbus.id %>?_method=DELETE"
                                                            onClick="return confirm('Eliminar?: <%= servbus.monto %>');"
                                                            class="button">Borrar</a>
                                                        <% } %>
                                                </td>
                                            </tr>

                                            <% } %>
                                                <tr>
                                                    <th></th>
                                                    <th></th>
                                                    <th>
                                                        <%= totalEfec %>
                                                    </th>
                                                    <th></th>
                                                </tr>
                            </table>
                            <% totalGral=totalGral + totalEfec; %>
                                <% } %>
                                    <h1>Total Efectivo: <%= totalGral %>
                                    </h1>
                                    <div class="miBox">
                                        EFECTIVO
                                         </br>
                                         Servicios:
                                        </br>
                                        Ventas
                                        </br>
                                        Retiros de Caja:
                                        </br>
                                        Efectivo en Caja:
                                    </div>         
                                                                      