<h1>
    Editar Caja:
</h1>

<form method="post" action="/cajas/<%= caja.id %>?_method=PUT">

    <div class="wideRow">
        <label for="name" class="itemNarrow">Despacho:</label>
        
        <select id="despacho" name="despacho">
            <% for (var i in despachos) { %>
                <% var despacho = despachos[i]; %>
            <option value="<%= despacho.id %>" <%= despachoIds.includes(despacho.id) ? "selected" : "" %>><%= despacho.name %> Ruta:<%= caja.despachoId %></option>
            <% } %>
        </select>                
    </div>
    <div class="wideRow">
        <label for="name" class="itemNarrow">Fecha:</label>
        <input type="date" class="itemWide" id="fecha" name="fecha" value="<%= caja.fecha.toISOString().split('T')[0]; %>" placeholder="Fecha"
               autocomplete="off"/>
    </div>

    <br/>

    <a href="/goback" class="button">Cancel</a>

    <input type="submit" value="Save">

</form>