<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/main.css" />
    <link href="/assets/css/main.css.map" />
    <link rel='stylesheet' type='text/css' media='only screen and (min-width: 800px) and (min-device-width: 600px)'
        href='/assets/css/wide.css' />
    <link rel='stylesheet' type='text/css' media='only screen and (max-width: 480px)'
        href='/assets/css/smartphone.css' />
    <link rel="stylesheet" type="text/css"
        href="https://cdn.jsdelivr.net/npm/cookieconsent@3/build/cookieconsent.min.css" />
    <title>Etersac</title>
    <meta name="description" content="" />
</head>

<body>
    <div class="sidebar">
        <div class="sidebar_items">
            <div class="sidebar_item"><a href="/"><span class="fa fa-home"></span> Inicio</a></div>
            <div class="sidebar_item"><a href="/empresas"><span class="fa fa-industry"></span> Empresas</a></div>
            <div class="sidebar_item"><a href="/routs"><span class="fa fa-road"></span> Rutas</a></div>
            <div class="sidebar_item"><a href="/propietarios"><span class="fa fa-user"></span> Propietarios</a></div>
            <div class="sidebar_item"><a href="/unidads"><span class="fa fa-bus"></span> Unidades</a></div>
            <div class="sidebar_item"><a href="/Items/1"><span class="fa fa-money"></span> Ing. Buses</a></div>
            <div class="sidebar_item"><a href="/Items/2"><span class="fa fa-barcode"></span> Ventas</a></div>
            <div class="sidebar_item"><a href="/grupos"><span class="fa fa-object-group"></span> Grupos</a></div>
            <div class="sidebar_item"><a href="/users"><span class="fa fa-user"></span> Users</a></div>
        </div>
    </div>
    <div id="page">
        <header class="main" id="mainHeader">
            <div class="right">
                <% if (!locals.loginUser) { %>
                    <a href="/login">Login</a>
                    <% } else { %>
                        <a href="/users/<%= loginUser.id %>">
                            <%= loginUser.displayName %>
                        </a>
                        <a href="/login?_method=DELETE">Logout</a>
                        <% } %>
            </div>
            <h1><img src="/icon.png" alt="Bus" width="30" height="30"> Empresa de Transp. Edilberto Ramos</h1>
            <div class="toggle">
                <span class="fa fa-bars"></span>
            </div>
        </header>

        <nav class="main" id="mainNav" role="navigation">
            <a href="/"><span class="fa fa-home"></span></a>
        </nav>

        <section class="main" id="mainSection">
            <% if (messages.info) { %>
                <article id='flashinfo'>
                    <h3>Información de Interés:</h3>
                    <ul>
                        <% for (var i in messages.info) { %>
                            <li>
                                <%= messages.info[i] %>
                            </li>
                            <% } %>
                    </ul>
                </article>
                <% } %>

                    <% if (messages.success) { %>
                        <article id='flashsuccess'>
                            <h3>Tareas Completadas Exitosamente:</h3>
                            <ul>
                                <% for (var i in messages.success) { %>
                                    <li>
                                        <%= messages.success[i] %>
                                    </li>
                                    <% } %>
                            </ul>
                        </article>
                        <% } %>

                            <% if (messages.error) { %>
                                <article id='flasherror'>
                                    <h3>Errors:</h3>
                                    <ul>
                                        <% for (var i in messages.error) { %>
                                            <li>
                                                <%= messages.error[i] %>
                                            </li>
                                            <% } %>
                                    </ul>
                                </article>
                                <% } %>


                                    <%- body %>

        </section>

        <footer class="main" id="mainFooter">
            &copy; Yilver Herrera
        </footer>
        <script src="/app/anime.min.js"></script>
        <script src="/app/main.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/cookieconsent@3/build/cookieconsent.min.js"
            data-cfasync="false"></script>
        <script>
            window.cookieconsent.initialise({
                "palette": {
                    "popup": {
                        "background": "#252e39"
                    },
                    "button": {
                        "background": "#14a7d0"
                    }
                }
            });
        </script>
</body>

</html>