<h1>
    Agregar Despacho:
</h1>

<form method="post" action="/despachos">
<div class="form_one">
    <div class="label">
        <label for="name" class="itemNarrow">Nombre:</label>
        </div>
        <div class="input">
        <input type="text" class="itemWide" id="name" name="name" value="<%= despacho.name %>" placeholder="Despacho name"
               autocomplete="off"/>
    </div>

    <div class="label">
        <label for="name" class="itemNarrow">Color:</label>
        </div>
        <div class="input">
        <input type="color" class="itemWide" id="color" name="color" value="<%= despacho.color %>" 
               />
    </div>

    <div class="label">
        <label for="routId" class="itemNarrow">Ruta:</label>
        </div>
        <div class="input">
        <select class="itemWide" id="routId" name="routId">
            <% for (var i in routs) { %>
                <% var rout = routs[i]; %>
                    <option value="<%= rout.id %>" <%= rout.id === despacho.routId ? "selected" : "" %>>
                        <%= rout.nombre %>
                    </option>
                    <% } %>
        </select>
    </div>

    <br/>

    <button class="button_secundario" href="/goback">Cancelar</button>

    <input class="button_primary" type="submit" value="Guardar">
</div>
</form>