<h1>Despachos:</h1>

<table>
    <% for (var i in despachos) { %>
        <% var despacho = despachos[i]; %>
        <tr>
            <td>
                <%= despacho.name %>
            </td>
            <% if (locals.loginUser && locals.loginUser.isAdmin) { %>
            <td>
                <a href="/despachos/<%= despacho.id %>/edit" class="button">Edit</a>
            </td>
            <td>
                <a href="/despachos/<%= despacho.id %>?_method=DELETE"
                   onClick="return confirm('Delete: <%= despacho.name %>');"
                   class="button">Delete</a>
            </td>
            <% } %>
        </tr>
    <% } %>
</table>
<% if (locals.loginUser && locals.loginUser.isAdmin) { %>
<a href="/despachos/new" class="button">Create New Group</a>
<% } %>