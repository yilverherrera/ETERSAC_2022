<h1>Despachos:</h1>

<table>
    <% for (var i in despachos) { %>
        <% var despacho = despachos[i]; %>
        <tr>
            <td>
                <h2><%= despacho.name %></h2>
            </td>
            <% if (locals.loginUser && locals.loginUser.isAdmin) { %>
            <td>
                <a href="/despachos/<%= despacho.id %>/edit"><i class="fa-regular fa-pen-to-square"></i></a>
            </td>
            <td>
                <a href="/despachos/<%= despacho.id %>?_method=DELETE"
                   onClick="return confirm('Delete: <%= despacho.name %>');"
                  ><i class="fa-regular fa-trash-can"></i></a>
            </td>
            <% } %>
        </tr>
    <% } %>
</table>
<% if (locals.loginUser && locals.loginUser.isAdmin) { %>
<a href="/despachos/new" class="button">Crear Nuevo Despacho</a>
<% } %>