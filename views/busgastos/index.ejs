<% if (locals.loginUser) { %>
    <a href="/cajas/<%= caja.id %>/busgastos/new" class="crear">Crear Nuevo Gasto Ope.</a>
    <% } %>
   
<div class="container">

    <div class="row flotante">
        <div class="col-2">Tipo de Pago</div>
        <div class="col-2">Monto</div>
        <div class="col-2">Efectivo Abon.</div>
        <div class="col-2">Doc</div>
        <div class="col-2">Detalle</div>
        <div class="col-2"></div>
    </div>
    <br>
    <br>
    <br>
    <br>
    <% let totalEfec=0; %>
<% for (var i in busgastos) { %>
    <% var busgasto=busgastos[i]; %>
    <% totalEfec = totalEfec + busgastos.monto; %>
    <div class="row">
        <div class="col-2"><%= busgasto.tipoPago %></div>
        <div class="col-2"><%= busgasto.monto %></div>
        <div class="col-2"><%= busgasto.abonado %></div>
        <div class="col-2"><%= busgasto.doc %></div>
        <div class="col-2">
<% for (var n in busgasto.detbusgastos) { %>
<% var detbusgasto=busgasto.detbusgastos[n]; %>
        Costo:<%= detbusgasto.costoUni %> Cant:<%= detbusgasto.cant %> Total:<%= detbusgasto.total %>
         <% } %>
        </div>
        <div class="col-2">
         <a href="busgastos/<%= busgasto.id %>"><i class="fa-regular fa-eye"></i></a>
            <a href="/cajas/<%= caja.id %>/busgastos/<%= busgasto.id %>?_method=DELETE" onClick="return confirm('Eliminar?: Monto:<%= busgastos.monto %>');"><i class="fa-regular fa-trash-can"></i></a> 
           </div>
    </div>

    <% } %>
    <div class="row">
        <div class="col-12"><b><%= totalEfec %></b></div>
    </div>
    

</div>

<h2>Total Efectivo Gasto Ope.: <%= totalEfec %></h2>
                                                                     
